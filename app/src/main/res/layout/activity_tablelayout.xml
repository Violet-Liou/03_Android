<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow>
<!--        用 TableRow 來設定，看一個Row中有幾個column 就放幾個 TextView-->
<!--        會因為column中的內容，而自動拓寬，讓column的寬度可以符合內容長度-->
        <TextView
            android:id="@+id/textview1_1"
            android:text="遊戲名稱"
            android:textSize="16sp"
            android:textColor="#EB8C1F"
            android:textStyle="bold"
            android:padding="5dp"
            android:gravity="center_horizontal"
            android:background="#AFC8BD"
            />

        <TextView
            android:id="@+id/textview1_2"
            android:text="遊戲版本"
            android:textSize="16sp"
            android:textColor="#97C300"
            android:textStyle="bold"
            android:padding="5dp"
            android:gravity="center_horizontal"
            android:background="#B4EBDC"
            />

        <TextView
            android:id="@+id/textview1_3"
            android:text="手機系統版本"
            android:textSize="16sp"
            android:textColor="#447CEF"
            android:textStyle="bold"
            android:padding="5dp"
            android:gravity="center_horizontal"
            android:background="#AFC8BD"
            />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/textvire2_1"
            android:text="超級瑪利歐大賽車"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/textview2_2"
            android:text="Version 1.6"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/textview2_3"
            android:text="Android 9.1 版"
            android:layout_margin="5dp"
            />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/textvire3_1"
            android:text="跑跑卡丁車"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/textview3_2"
            android:text="Version 2.65"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/textview3_3"
            android:text="Android 12 版"
            android:layout_margin="5dp"
            />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/textvire4_1"
            android:text="英雄聯盟"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/textview4_2"
            android:text="Version 12.3"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/textview4_3"
            android:text="Android 10 版"
            android:layout_margin="5dp"
            />
    </TableRow>

    <Button
        android:id="@+id/button_1"
        android:text="選取遊戲"
        />
    <Button
        android:id="@+id/button_2"
        android:text="離開選單"
        />

    <TableRow>
        <Button
            android:id="@+id/button_3"
            android:text="加入選單"
            />

        <Button
            android:id="@+id/button_4"
            android:text="編輯選單"
            />

        <Button
            android:id="@+id/button_5"
            android:text="清除選單"
            />
    </TableRow>


    <TableRow>
        <ImageView
            android:id="@+id/image_1"
            android:src="@android:drawable/btn_star_big_on"
            />
        <ImageView
            android:id="@+id/image_2"
            android:src="@android:drawable/btn_star_big_off"
            />
        <ImageView
            android:id="@+id/image_3"
            android:src="@android:drawable/btn_star"
            />
    </TableRow>

    <ImageView
        android:id="@+id/image_4"
        android:src="@android:drawable/btn_dialog"
        android:scaleType="fitXY"
        android:layout_height="80dp"
        />

    <TableRow
        android:background="#000000">
        <TextView
            android:id="@+id/textvire5_1"
            android:text="動物森友會"
            android:layout_margin="2dp"
            android:background="#FFFFFF"
            />

        <TextView
            android:id="@+id/textview5_2"
            android:text="Version 2.5"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="#FFFFFF"
            />

        <TextView
            android:id="@+id/textview5_3"
            android:text="Android 9 版"
            android:layout_margin="2dp"
            android:background="#FFFFFF"
            />
    </TableRow>

</TableLayout>